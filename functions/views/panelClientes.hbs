      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-4">
              <div class="info-box">
                <span class="info-box-icon"><i class="icon ion-ios-contact"></i></span>
                <div class="info-box-content">
                  <span class="h4 font-weight-bold mb-0" id="nombreCliente">{{clienteData.Nombre}}</span>
                  <span class="info-box-text">{{clienteData.Alias}}</span>
                  <span hidden id="clienteId">{{clienteData.Id}}</span>
